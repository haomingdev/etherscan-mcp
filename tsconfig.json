{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src", // Use rootDir to flatten output
    // "rootDirs": ["./src", "./test"], // Removed rootDirs
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Only include src for compilation
  "exclude": ["node_modules", "dist", "test"] // Exclude test from compilation
}
