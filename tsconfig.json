{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    // "rootDir": "./src", // Removed rootDir to allow compiling 'test' alongside 'src'
    // "rootDirs": ["./src", "./test"], // Keep commented or use if specific structure needed
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*"], // Include both src and test directories
  "exclude": ["node_modules", "dist"] // Remove 'test' from exclude
}
